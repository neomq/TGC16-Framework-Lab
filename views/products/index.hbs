{{#extends 'base'}}

{{#block 'content'}}
<table class="table">
    <thead>
        <tr>
            <th>ID</th>
            <th>Name</th>
            <th>Category</th>
            <th>Tags</th>
            <th>Cost</th>
            <th>Description</th>
            <th></th>
        </tr>

    </thead>
    <tbody>
        {{#each foods}}
            <tr>
                <td>
                    {{this.id}}
                </td>
                <td>
                    {{this.name}}
                </td>
                <td>
                    {{this.category.name}}
                </td>
                <td>
                    {{#each this.tags}}
                        <span class="badge bg-dark text-light">{{this.name}}</span>
                    {{/each}}
                </td>
                <td>
                    {{this.cost}}
                </td>
                <td>
                    {{this.description}}
                </td>
                <td>
                    <a href="/products/{{this.id}}/update" class="btn btn-primary btn-sm">Update</a>
                    <a href="/products/{{this.id}}/delete" class="btn btn-danger btn-sm">Delete</a>
                </td>
            </tr>
        {{/each}}
    </tbody>
</table>

{{/block}}

{{/extends}}